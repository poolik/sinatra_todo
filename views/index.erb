<h1>Todos</h1>

<% if @todos.empty? %>
<p>No todos found.</p>
<% else %>
<ol>
<% @todos.each do |todo| %>
<li>
  <%= link_to_priority todo.priority %>
  <%= todo.content %>
  <% todo.tags.each do |tag| %>
  <%= link_to_tag tag %>
  <% end %>
  <%= edit_link(todo) %>
  <%= done_link(todo) %>
</li>
<% end %>
</ol>
<% end %>  
